{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/**", "config/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "index.js",
      "methods": ["POST"]
    },
    {
      "src": "/health",
      "dest": "index.js",
      "methods": ["GET"]
    },
    {
      "src": "/",
      "dest": "index.js",
      "methods": ["GET"]
    }
  ]
}
